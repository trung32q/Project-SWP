<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>control.Account.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmCaptcha</servlet-name>
        <servlet-class>control.Account.ConfirmCaptchaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisAccount</servlet-name>
        <servlet-class>control.Account.RegisAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotPassword</servlet-name>
        <servlet-class>control.Account.ForgotPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePass_Login</servlet-name>
        <servlet-class>control.Account.ChangePass_LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Confim_Forget</servlet-name>
        <servlet-class>control.Account.Confim_ForgetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowProflieServlet</servlet-name>
        <servlet-class>control.Account.ShowProflieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewClassServlet</servlet-name>
        <servlet-class>control.Account.Lecture.ViewClassServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>control.Account.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowProjectClassSeverlet</servlet-name>
        <servlet-class>control.Account.Lecture.ShowProjectClassSeverlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowProjectStudent</servlet-name>
        <servlet-class>control.Account.Student.ShowProjectStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImportFileServlet</servlet-name>
        <servlet-class>control.Account.Lecture.ImportFileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchclassServlet</servlet-name>
        <servlet-class>control.Account.Lecture.SearchclassServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewStudentInClassServlet</servlet-name>
        <servlet-class>control.Account.Lecture.ViewStudentInClassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmCaptcha</servlet-name>
        <url-pattern>/confirmcaptcha</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisAccount</servlet-name>
        <url-pattern>/regisaccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPassword</servlet-name>
        <url-pattern>/forgotpassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePass_Login</servlet-name>
        <url-pattern>/changepassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Confim_Forget</servlet-name>
        <url-pattern>/confimforget</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowProflieServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewClassServlet</servlet-name>
        <url-pattern>/lectureview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowProjectClassSeverlet</servlet-name>
        <url-pattern>/showproject</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowProjectStudent</servlet-name>
        <url-pattern>/showprojectstudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImportFileServlet</servlet-name>
        <url-pattern>/import</url-pattern>
    </servlet-mapping>
    <dependencies>
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi</artifactId>
            <version>3.17</version>
        </dependency>
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi-ooxml</artifactId>
            <version>3.17</version>
        </dependency>
    </dependencies>
    <servlet-mapping>
        <servlet-name>SearchclassServlet</servlet-name>
        <url-pattern>/searchclass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewStudentInClassServlet</servlet-name>
        <url-pattern>/showstudentinclass</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
